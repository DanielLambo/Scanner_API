# Email Scanner API Configuration Template
# Copy this file to .env and replace ## placeholders with actual values

# Hunter.io API Key - Get from https://hunter.io/api
HUNTER_API_KEY=##

# VirusTotal API Key - Get from https://www.virustotal.com/
VIRUSTOTAL_API_KEY=##

# API Authentication Key - Generate a secure random string
API_KEY=##

# Scoring Weights (should sum to 1.0)
SCORING_WEIGHTS_EMAIL=0.3
SCORING_WEIGHTS_URL=0.4
SCORING_WEIGHTS_CONTENT=0.3

# API Server Configuration
API_HOST=0.0.0.0
API_PORT=8000

# External API Timeout (seconds)
EXTERNAL_API_TIMEOUT=30
